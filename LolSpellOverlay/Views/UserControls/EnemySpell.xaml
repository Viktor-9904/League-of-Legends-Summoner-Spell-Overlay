<UserControl x:Class="LolSpellOverlay.Views.UserControls.EnemySpell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LolSpellOverlay.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">

    <Grid Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonUp="Spell_LeftClick" MouseRightButtonUp="Spell_RightClick" Cursor="Hand">
        <Image Source="{Binding Spell.Icon}" Stretch="UniformToFill" Width="30" Height="30"/>
        

        <Rectangle x:Name="DarkOverlay" Fill="Black">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Setter Property="Opacity" Value="0.75"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=OverlayText, Path=Text.Length}" Value="0">
                            <Setter Property="Opacity" Value="0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>

        <TextBlock x:Name="OverlayText"
               Text="{Binding Spell.CooldownDisplay}"
               FontSize="15"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="0" Color="Black" Opacity="0.8"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
